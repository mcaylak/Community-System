                                <li><a href="#.">T-SHIRTS  (120)</a></li>
                                <li><a href="#.">UNDERWEAR  (98)</a></li>
                                <li><a href="#.">jACKETS & COATS  (36)</a></li>
                            </ul>

                            <!--======= TOP RATED =========-->
                            <h5>TOP RATED</h5>
                            <ul class="top-rated">

                                <h5>TOP RATED</h5>
                                <ul class="top-rated">

                                    @foreach (var item in DigerUrunler.OrderByDescending(x => x.UrunPaylasmaTarihi).Take(3))
                                    {
                                        <li>
                                            <div class="img">
                                                <section> <img class="img-responsive" src="@item.UrunResimYol" alt=""> </section>
                                            </div>

                                            <a class="font-lora" href="#.">@item.UrunAdi</a>
                                            <p>₺@item.UrunFiyat</p>
                                        </li>
                                    }


                                </ul>
                        </div>
                    </div>
                </div>

                <!--======= SHOP IMAGES =========-->
                <div class="col-md-9">
                    <ul class="row item-info">

                        <!--======= PRODUCTS 1 =========-->

                        <li class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-5">
                                    <section> <a href="#."> <img class="img-responsive" src="@Model.UrunAdi" alt=""> </a> </section>
                                </div>
                                <div class="col-sm-7">
                                    <!--======= PRODUCTS DETAILS =========-->
                                    <div class="products-details">
                                        <h3>Casual men wearing Shirt</h3>
                                        <span class="price">$ 95.66 <span class="strike">$100.00</span></span>
                                        <p>@Model.UrunAciklama</p>
                                        <!--======= ADD TO CART =========-->
                                        <a class="add-cart font-lora" href="#."> ADD TO CART </a> <a class="add-cart font-lora" href="#."> <i class="fa fa-heart-o"></i> </a> <a class="add-cart font-lora" href="#."> <i class="fa fa-retweet"></i></a>
                                    </div>
                                </div>

                                <!--======= TAB SECTION =========-->

                                <div class="col-sm-12">
                                    <div role="tabpanel">

                                        <!-- Nav tabs -->
                                        <ul class="nav nav-tabs" role="tablist">
                                            <li role="presentation" class="active"><a href="#describe" aria-controls="describe" role="tab" data-toggle="tab">Description</a></li>
                                            <li role="presentation"><a href="#review" aria-controls="review" role="tab" data-toggle="tab">Review</a></li>
                                        </ul>

                                        <!-- Tab panes -->
