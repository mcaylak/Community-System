
@{
    ViewBag.Title = "EtkinlikDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using WebApp2.Models

@model Etkinlik



<!--======= BANNER =========-->
<div class="sub-banner" style="background: url('../../Content/EtkinlikImgBig/etkinlik.jpg');">
    <div class="overlay">
        <div class="container">
            
            <h3>Bu etkinlikte<span> BENDE </span>VARIM</h3>
        </div>
    </div>
</div>

<!--======= CONTENT =========-->
<div class="content">

    <!--======= EVENTS =========-->

    <div class="event-pages event-detail">
        <div class="container">
            <div class="row">

                <!--======= EVENTS LEF =========-->
                <div class="col-md-9">

                    <!--======= EVENTS  =========-->
                    <ul class="events">

                        <!--======= EVENT 4  =========-->
                        <li>
                            <!--======= EVENTS IMAGE =========-->
                            <div class="col-xs-12 no-padding"> <img class="img-responsive" src="@Model.EtkinlikBuyukResimYol" alt=""> </div>
                            <!--======= EVENTS DETSILS =========-->
                            <div class="col-xs-12 no-padding">
                                <h5>@Model.EtkinlikBasligi</h5>
                                <div class="date-place"> <span><i class="fa fa-clock-o"></i>Başlangıç..: @Model.EtkinlikTarihi.ToShortDateString()</span>  <span></i>Bitiş..: @Model.EtkinlikBitis.ToShortDateString()</span>    <span><i class="fa fa-map-marker">@Model.EtkinlikAdres</i></span> </div>
                                <p>@Model.EtkinlikIcerik</p>
                                <div class="stare-ev">
                                    @{
                                        Kullanici user = Model.Kullanicilar.FirstOrDefault(x => x.KullaniciID == Convert.ToInt32(Session["Kullanici"]));
                                        if (Session["Kullanici"]!=null)
                                        {
                                            if (user != null)
                                            {
                                                <div class="btn-right"> <a href="/Account/EtkinlikIptal/@Model.EtkinlikID" class="btn" style="background-color:#e74c3c; color:aliceblue;" onclick="iptal()">Etkinlikten Çık</a> </div>
                                            }
                                            else
                                            {
                                                <div class="btn-right"> <a href="/Account/EtkinlikOnay/@Model.EtkinlikID" class="btn" onclick="katil()">Etkinlige Katıl</a> </div>
                                            }

                                        }
                                        else
                                        {
                                            <div class="btn-right"> <a href="" class="btn" onclick="katilma()">Etkinlige Katıl</a> </div>
                                        }
                                        

                                    }
                                    <ul class="social_icons pull-right">
                                        <li>
                                            <h6 class="margin-r-20"><em>Share:</em></h6>
                                        </li>
                                        <li class="facebook"><a href="#."><i class="fa fa-facebook"></i></a></li>
                                        <li class="twitter"><a href="#."><i class="fa fa-twitter"></i></a></li>
                                        <li class="googleplus"><a href="#."><i class="fa fa-google-plus"></i></a></li>
                                        <li class="instagram"><a href="#."><i class="fa fa-instagram"></i></a></li>
                                        <li class="soundcloud"><a href="#."><i class="fa fa-rss"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>

                <!--======= SIDE BAR =========-->
                <div class="col-md-3">
                    <div class="side-bar">
                        <div class="right-map">
                            
                            <div class="contact-info">
                                <p><i class="fa fa-clock-o"> </i>@Model.EtkinlikTarihi.ToShortDateString()</p>
                                <p>
                                    <i class="fa fa-map-marker"></i>@Model.EtkinlikAdres
                                </p>
                                <p><i class="fa fa-phone"> </i>@Model.EtkinlikSahibi</p>
                                
                            </div>
                        </div>

                        <!--======= ARCHIVE =========-->
                        <div class="request-info">
                            <i class="fa fa-envelope-o"></i>
                            <h6>Bize Ulaşın</h6>
                            <p>
                                Hangi Konuda Yardım Almak İstediginizi Bize İletiniz..
                            </p>
                            <a href="/Home/BizeUlasın" class="btn">Bize-Ulaşın</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


















