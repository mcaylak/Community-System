
@{
    ViewBag.Title = "ParolamiUnuttumGuncelleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WebApp2.Models.Kullanici

<div class="sub-banner" style="background: url('../Content/hesap.jpg');">
    <div class="overlay">
        <div class="container">
            <h3>HESABINIZ BURADA<span> GÜVENDE</span> </h3>
        </div>
    </div>
</div>

<!--======= CONTENT =========-->
<div class="content">

    <!--======= CONTACT US =========-->
    <section class="contact-us">
        <div class="container">

            <div class="row">

                <!--======= CONTACT FORM =========-->
                <div class="col-md-7">
                    <h5>PAROLA SIFIRLA</h5>
                    <div id="contact_message" class="success-msg"> <i class="fa fa-paper-plane-o"></i>Thank You. Your Message has been Submitted</div>

                    @using (Html.BeginForm("ParolaKaydet", "Account", FormMethod.Post, htmlAttributes: new { id = "contact_form", @class = "contact-form", enctype = "multipart/form-data" }))
                    {
                        <ul class="row">
                           
                           <input type="hidden" value="@Model.KullaniciID" name="id" />
                
                            <li class="col-sm-8">
                                <label>
                                    Yeni Şifre *
                                    <input type="password" class="form-control" name="parola" id="parola" placeholder="">
                                </label>
                            </li>
                            <li class="col-sm-8">
                                <label>
                                    Yeni Şifre Onayla *
                                    <input type="password" class="form-control" name="parola" id="parola" placeholder="">
                                </label>
                            </li>
                            
                            <li class="col-sm-12">
                                <button type="submit" value="submit" class="btn" id="btn_submit" onClick="">SIFIRLA</button>
                            </li>
                        </ul>
                    }
                </div>

                <!--======= CONTACT INFORMATION =========-->
                <div class="col-md-5">
                    <div class="contact-info">
                        <h5>HAKKIMIZDA </h5>
                        <ul>

                            <!--======= ADDRESS =========-->
                            <li>
                                <div class="row">
                                    <div class="col-xs-2">
                                        <div class="icon"> <i class="fa fa-map-marker"></i> </div>
                                    </div>
                                    <div class="col-xs-10">
                                        <h6>Adres</h6>
                                        <p>
                                            SAKARYA ÜNİVERSİTESİ<br>
                                            HAŞİM GÜRDAMAR BİLGİSAYAR VE BİLİŞİM FAKÜLTESİ
                                        </p>
                                        <hr>
                                    </div>
                                </div>
                            </li>

                            <!--======= PHONE =========-->
                            <li>
                                <div class="row">
                                    <div class="col-xs-2">
                                        <div class="icon"> <i class="fa fa-phone"></i> </div>
                                    </div>
                                    <div class="col-xs-10">
                                        <h6>Phone</h6>
                                        <p>+90 (545) 383 00 76</p>
                                        <p>+90 (507) 307 29 16</p>
                                        <hr>
                                    </div>
                                </div>
                            </li>

                            <!--======= SUPPORT =========-->
                            <li>
                                <div class="row">
                                    <div class="col-xs-2">
                                        <div class="icon"> <i class="fa fa-envelope-o"></i> </div>
                                    </div>
                                    <div class="col-xs-10">
                                        <h6>Destek</h6>
                                        <p>SauHub@gmail.com</p>
                                        <hr>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!--======= CONTENT END =========--> 


