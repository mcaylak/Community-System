
@{
    ViewBag.Title = "View";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using WebApp2.Models

@model Tanitim

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Ürün Ekleme</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->

    @using (Html.BeginForm("TanitimDuzenle", "Admin", FormMethod.Post, htmlAttributes: new { id = "", @class = "", enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(x => x.TanitimID)

        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Ürün Adı Giriniz</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="tanitimIcerik" value="@Model.TanitimIcerik">
            </div>
            
            <div class="form-group">
                <label for="exampleInputFile">Tanıtım Resmi</label>
                <input type="file" id="exampleInputFile" name="tanitimResimYol" value="@Model.TanitimResimYol">
            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    }


</div>

