
@{
    ViewBag.Title = "BlogDuzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using WebApp2.Models

@model Blog
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Blog Ekleme</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm("BlogDuzenle", "Admin", FormMethod.Post, htmlAttributes: new { id = "", @class = "", enctype = "multipart/form-data" }))
    {

        @Html.HiddenFor(x => x.BlogID)

        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Blog Baslık</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="blogBaslik" value="@Model.BlogBaslıgı" placeholder="">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Blog Paylasma Tarihi</label>
                <input type="date" class="form-control" id="exampleInputEmail1" name="blogTarih" value="@Model.BlogPaylasmaTarihi" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Blog Acıklama</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="blogAciklama" value="@Model.BlogIcerik" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Blog Resmi</label>
                <input type="file" id="exampleInputFile" name="blogResimYol" value="@Model.BlogResimYol">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    }


</div>
