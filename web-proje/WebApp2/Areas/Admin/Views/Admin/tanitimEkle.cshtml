
@{
    ViewBag.Title = "tanitimEkle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Tanitim Ekleme</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
   @using (Html.BeginForm("tanitimEkle", "Admin", FormMethod.Post, htmlAttributes: new { id = "", @class = "", enctype = "multipart/form-data" }))
   {
    @Html.AntiForgeryToken()

    <div class="box-body">
        
        <div class="form-group">
            <label for="exampleInputEmail1">Tanitim Acıklama</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="tanitimAciklama" placeholder="">
        </div>
        <div class="form-group">
            <label for="exampleInputFile">Tanitim Resmi</label>
            <input type="file" id="exampleInputFile" name="tanitimResimYol">
        </div>
    </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
   }
        
    
</div>

