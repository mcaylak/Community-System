@model IEnumerable<WebApp2.Models.DersNotu>
@{
    ViewBag.Title = "dersNotuIslemleri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<a href="/Admin/Admin/dersNotuEkle"><button type="button" class="btn btn-block btn-primary btn-flat">Ders Notu Ekle</button></a>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Ders Notları Listesi</h3>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>ID</th>
                        <th>Gonderen Kullanıcı Adı</th>
                        <th>Paylasma Tarihi</th>
                        <th>Ders Adı</th>    
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DersNotuID</td>
                            <td>@item.paylasanAdi</td>
                            <td>@item.DersNotuPaylasmaTarihi</td>
                            <td>@item.DersAdi</td>
                            
                            <td><a href="@Url.Action("DersNotuSil", "Admin", new { dersId = item.DersNotuID})"><button type="button" class="btn btn-block btn-danger btn-flat">Sil</button></a></td>
                            <td><a href="@Url.Action("DersNotuDuzenle", "Admin", new { dersId = item.DersNotuID})"><button type="button" class="btn btn-block btn-danger btn-flat">Duzenle</button></a></td>
                        </tr>
                    }
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

