@model IEnumerable<WebApp2.Models.Slider>
@{
    ViewBag.Title = "sliderIslemleri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<a href="/Admin/Admin/sliderEkle"><button type="button" class="btn btn-block btn-primary btn-flat">Slider Ekle</button></a>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Slider Listesi</h3>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>Slider Resim ID</th>
                        <th>Slider Acıklama</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.SliderID</td>
                        <td>@item.SliderAdi</td>
                        
                        <td><a href="@Url.Action("sliderSil", "Admin", new { sliderId = item.SliderID})"><button type="button" class="btn btn-block btn-danger btn-flat">Sil</button></a></td>
                        <td><a href="@Url.Action("sliderDuzenle", "Admin", new { sliderId = item.SliderID})"><button type="button" class="btn btn-block btn-danger btn-flat">Duzenle</button></a></td>
                    </tr>

                    }
                    
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

