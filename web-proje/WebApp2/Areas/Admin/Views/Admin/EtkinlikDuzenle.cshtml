
@{
    ViewBag.Title = "EtkinlikDuzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using WebApp2.Models

@model Etkinlik

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Etkinlik Duzenleme</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->

    @using (Html.BeginForm("EtkinlikDuzenle", "Admin", FormMethod.Post, htmlAttributes: new { id = "", @class = "", enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(x => x.EtkinlikID)

        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Etkinlik Sahibi</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="etkinlikSahibi" value="@Model.EtkinlikSahibi" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Etkinlik Adı</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="etkinlikAdi" value="@Model.EtkinlikBasligi" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Paylasma Tarihi</label>
                <input type="date" class="form-control" id="exampleInputEmail1" name="etkinlikPaylasmaTarihi" value="@Model.EtkinlikTarihi" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Etkinlik Acıklama</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="etkinlikAciklama" value="@Model.EtkinlikIcerik" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Etkinlik Resmi</label>
                <input type="file" id="exampleInputFile" name="etkinlikResimYol" value="@Model.EtkinlikResimYol">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    }
</div>



