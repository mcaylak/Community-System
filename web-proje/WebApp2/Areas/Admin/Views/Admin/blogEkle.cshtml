@{
    ViewBag.Title = "blogEkle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Blog Ekleme</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm("blogEkle", "Admin", FormMethod.Post, htmlAttributes: new { id = "", @class = "", enctype = "multipart/form-data" }))
    {
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Blog Baslık</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="blogBaslik" placeholder="">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Blog Paylasma Tarihi</label>
                <input type="date" class="form-control" id="exampleInputEmail1" name="blogTarih" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Blog Acıklama</label>
                <textarea class="form-control"id="exampleInputEmail1" name="blogAciklama"></textarea>
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Blog Resmi</label>
                <input type="file" id="exampleInputFile" name="blogResimYol">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    }
        
   
</div>

