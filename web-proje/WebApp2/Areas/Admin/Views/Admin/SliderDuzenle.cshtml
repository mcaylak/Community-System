
@{
    ViewBag.Title = "SliderDuzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using WebApp2.Models

@model Slider

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Slider Duzenleme</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->

    @using (Html.BeginForm("SliderDuzenle", "Admin", FormMethod.Post, htmlAttributes: new { id = "", @class = "", enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(x=>x.SliderID)

        <div class="box-body">

            <div class="form-group">
                <label for="exampleInputEmail1">Slider Acıklama</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="aciklama" value="@Model.SliderAdi" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Slider Resmi</label>
                <input type="file" id="exampleInputFile" name="sliderResimYol" value="@Model.SliderResimYol">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    }
</div>
