
@{
    ViewBag.Title = "etkinlikEkle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Etkinlik Ekleme</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm("etkinlikEkle", "Admin", FormMethod.Post, htmlAttributes: new { id = "", @class = "", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Etkinlik Sahibi</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="etkinlikSahibi" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Etkinlik Adı</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="etkinlikAdi" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Paylasma Tarihi</label>
                <input type="date" class="form-control" id="exampleInputEmail1" name="etkinlikPaylasmaTarihi" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Etkinlik Acıklama</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="etkinlikAciklama" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Etkinlik Resmi</label>
                <input type="file" id="exampleInputFile" name="etkinlikResimYol">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    }
</div>

