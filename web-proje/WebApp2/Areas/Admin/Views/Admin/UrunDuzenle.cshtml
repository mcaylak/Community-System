
@{
    ViewBag.Title = "UrunDuzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using WebApp2.Models

@model Urunler

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Ürün Ekleme</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->

    @using (Html.BeginForm("UrunDuzenle", "Admin", FormMethod.Post, htmlAttributes: new { id = "", @class = "", enctype = "multipart/form-data" }))
    {
       @Html.HiddenFor(x=>x.UrunlerID)

        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Ürün Adı Giriniz</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="urunAdi" placeholder="@Model.UrunAdi">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Ürün Acıklama Giriniz</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="urunAciklama" placeholder="@Model.UrunAciklama">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Ürün Sahibi Adı Giriniz</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="urunSahibi" placeholder="@Model.Satici">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Ürün Fiyat</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="@Model.UrunFiyat" placeholder="">
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Ürün Giriş Tarihi</label>
                <input type="date" class="form-control" id="exampleInputPassword1" name="@Model.UrunPaylasmaTarihi" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Ürün Resmi</label>
                <input type="file" id="exampleInputFile" name="exampleInputFile" value="@Model.UrunResimYol">
            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    }


</div>

