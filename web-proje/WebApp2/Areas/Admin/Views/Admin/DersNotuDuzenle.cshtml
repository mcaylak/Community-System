
@{
    ViewBag.Title = "DersNotuDuzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using WebApp2.Models

@model DersNotu

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Ders Notu Duzenleme</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm("DersNotuDuzenle", "Admin", FormMethod.Post, htmlAttributes: new { id = "", @class = "", enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(x => x.DersNotuID)

        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Gonderen Kullanıcı Adı</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="paylasanAdi" value="@Model.paylasanAdi" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Ders Adı</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="dersAdi"   value="@Model.DersAdi"   placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Paylasma Tarihi</label>
                <input type="date" class="form-control" id="exampleInputEmail1" name="paylasmaTarihi"  value="@Model.DersNotuPaylasmaTarihi" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Ders Notu Acıklama</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="dersNotuAciklama" value="@Model.DersNotuAciklama"  placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Ders Notu Konu Baslik</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="dersBasligi" value="@Model.DersBaslıgı"  placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Ders Notu Durum</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="dersNotuDurum" value="@Model.DersNotuDurum" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Not Resmi</label>
                <input type="file" id="exampleInputFile" name="dersNotuResimYol" value="@Model.DersResimYol">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    }
</div>



